<div class="row">
  <div class="col-md-8">
    <h1>
      <%= markdown @task.title %>
    </h1>
    <p><%= markdown @task.body %></p>
    
  </div>
  <div class="col-md-4">
    <% if policy(@task).edit? %>
      <%= link_to "Edit", edit_list_task_path(@list,@task), class: 'btn btn-success' %>
    <% end %>
  </div>
  <% if policy(@task).destroy? %>
    <%= link_to "Delete task", [@list, @task], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this task?' } %>
  <% end %>
  </div>
</div>